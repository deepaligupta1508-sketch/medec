<body>
    <div class="form-card">
        <h2>Create Account</h2>
        <form id="signupForm">
            <input type="text" id="name" placeholder="Full Name / Hospital Name" required>
            <input type="email" id="email" placeholder="Email Address" required>
            <input type="password" id="password" placeholder="Password" required>
            <select id="role">
                <option value="patient">Patient / Citizen</option>
                <option value="hospital">Hospital Authority</option>
            </select>
            <button type="submit" class="btn-submit">Sign Up</button>
        </form>
        <div class="link">Already have an account? <a href="login.html">Login</a></div>
    </div>

    <script>
        document.getElementById('signupForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const userData = {
                name: document.getElementById('name').value,
                email: document.getElementById('email').value,
                password: document.getElementById('password').value,
                role: document.getElementById('role').value
            };

            try {
                const res = await fetch('http://localhost:5000/api/signup', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(userData)
                });
                const data = await res.json();
                if (data.success) {
                    alert("Account Created! Redirecting to Login...");
                    window.location.href = 'login.html';
                } else { alert(data.message); }
            } catch (err) { alert("Backend server not reached."); }
        });
    </script>
</body>
</html>
